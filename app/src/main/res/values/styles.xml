<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GrayTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/grayTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="BlueTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppBtnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/purple_500</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">4dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>